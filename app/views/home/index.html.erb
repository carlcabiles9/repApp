<% if can? :manage, Project %>
    I'M an Admin<br>
<br>
<div class="container">
  <div class="row">
    <div class="col-4">
        <h3>My Projects:</h3>
        <table class="table table-striped">
          <% current_user.projects.each do |project| %>
            <tr>
            <td><%= project.name %></td>
          <% end %>
      </table>
          <center><%= link_to 'Create Projects', new_project_path, class: 'btn btn-success' %>
          <%= link_to 'Create Users', new_user_path, class: 'btn btn-success' %></center>
    </div>
    <div class="col-4">
    
        <%= render template: "projects/index", locals: { projects: @projects } %>
    </div>
    <div class="col-4">
        <%= render template: "reports/new", locals: { reports: @reports } %>
        <div class="action-button">
            <center><%= link_to 'Send Daily Report', daily_home_index_url, class: 'btn btn-lg btn-success' %></center>
        </div>
    </div>
</div>
















